<Application x:Class="CinemaX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CinemaX"
             xmlns:v="clr-namespace:CinemaX.Views"
             xmlns:vm="clr-namespace:CinemaX.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <v:HomeWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
            <v:RegistrationWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ReceiptViewModel}">
            <v:ReceiptWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <v:LoginWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:MoviesViewModel}">
            <v:MoviesWindow/>
        </DataTemplate>

    </Application.Resources>
</Application>
